              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.test('Success response', function () {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(Array.isArray(response.data)).to.be.true;",
                  "    });",
                  "    if (response.data.length > 0) {",
